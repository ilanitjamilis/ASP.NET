@using MVC1.Models
@model Usuario
@{
    ViewBag.Title = "Registracion";
}

<h2>Registracion</h2>

<form method="POST" action="@Url.Action("Registracion", "Home")">

    @Html.ValidationMessageFor(x => x.nombre)<br />
    Nombre: @Html.TextBoxFor(x => x.nombre)<br />

    @Html.ValidationMessageFor(x => x.apellido)<br />
    Apellido: @Html.TextBoxFor(x => x.apellido)<br />

    Soy estudiante: @Html.CheckBoxFor(x => x.estudiante)<br />

    @Html.ValidationMessageFor(x => x.mail)<br />
    Email: @Html.TextBoxFor(x => x.mail)<br />

    @Html.ValidationMessageFor(x => x.usuario)<br />
    Usuario: @Html.TextBoxFor(x => x.usuario)<br />

    @Html.ValidationMessageFor(x => x.contraseña)<br />
    Contraseña: @Html.PasswordFor(x => x.contraseña)<br />

    @Html.ValidationMessageFor(x => x.confirmarConstraseña)<br />
    Confirmar contraseña: @Html.PasswordFor(x => x.confirmarConstraseña)<br />

    <input type="submit" value="Registrarse" />
    @Html.ActionLink("Ir a inicio", "Index", "Home")

</form>